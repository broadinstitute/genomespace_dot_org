<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :username %><br />
		<%= f.text_field :username %>
	</div>
	<div class="field">
	  <%= f.label :cms_admin, "CMS Admin?" %><br />
	  <%= f.select :cms_admin, options_for_select([["Yes", 1],["No", 0]], @user.cms_admin? ? 1 : 0 ) %>
	</div>
	<div class="field">
	  <%= f.label :deliverables_admin, "Deliverables Admin?" %><br />
	  <%= f.select :deliverables_admin, options_for_select([["Yes", 1],["No", 0]], @user.deliverables_admin? ? 1 : 0 ) %>
	</div>
	<div class="field">
	  <%= f.label :super_admin, "Super Admin?" %><br />
	  <%= f.select :super_admin, options_for_select([["Yes", 1],["No", 0]], @user.super_admin? ? 1 : 0 ) %>
	</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
